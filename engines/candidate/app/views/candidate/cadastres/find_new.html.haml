.row.mini-margin
  .col-md-12
    .panel.panel-default
      .panel-body
        .row
          .col-md-6.col-md-offset-3
            %h1{:style => "text-align: center !important"}
              %b Pesquisa CPF
              %br/
              %small
                Informe um CPF para realizar a busca
        %hr/
        .row
          .col-md-6.col-md-offset-3
            = simple_form_for @search, url: pesquisa_cpf_path, method: :post do |f|
              .row
                .col-md-6.col-md-offset-1
                  = f.input :cpf, label: "CPF", input_html: { class: 'cpf' }
                .col-md-5
                  = f.submit "Realizar pesquisa", class: 'btn btn-success filter-button', data: { disable_with: t(:disable_with)}