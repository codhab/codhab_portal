- if !mobile_device?
  = render 'candidate/restrict_area/dashboard/top'
  .row
    .col-md-3
      = render 'candidate/restrict_area/dashboard/sidebar'
    .col-md-9
      .row
        .col-md-12
          .panel.panel-default
            .panel-body
              .row
                .col-md-12
                  - if @cadastre.askings.where('id is not null').present?
                    %br/
                    %br/
                    %br/
                    %h2{style: 'text-align: center'}
                      %b Questionário respondido.
                    %h4{style: 'text-align: center'}
                      %b= link_to "Clique aqui para voltar", restrict_area_root_path
                    %br/
                    %br/
                    %br/
                  - else
                    = render 'form'
- else
  .row
    .col-md-12
      .panel.panel-default
        .panel-body
          .row
            .col-md-12
              - if @cadastre.askings.where('id is not null').present?
                %br/
