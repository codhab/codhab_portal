= render 'candidate/restrict_area/dashboard/sidebar'
- if !mobile_device?
  .row
    .col-md-3
      %ul.list-group
        %li.list-group-item= link_to "Página inicial", restrict_area_root_path
        %li.list-group-item= link_to "Atualizar meus dados de contato", edit_restrict_area_cadastre_path(@cadastre)
        -# %li.list-group-item= link_to "Abrir Questionamento", restrict_area_tickets_path
        %li.list-group-item= link_to "Finalizar acesso", logout_restrict_area_sessions_path, method: :delete
    .col-md-9
      .row
        .col-md-12
          .panel.panel-default
            .panel-body
              .row
                .col-md-12
                  .row
                    .col-md-12
                      - @questions.each do |q|
                        .questions_box
                          .question_single{:class => q.question_type === 0 ? 'question_user' : 'question_codhab'}
                            %span
                              %b.question_answer
                                = q.question_type === 0 ? 'Você disse :' : 'A CODHAB respondeu :'
                              %b.question_date
                                Criado em:
                                = q.created_at.strftime('%d/%m/%Y')
                            %p
                              = q.message
- else
  .row
    .col-md-12
      .panel.panel-default
        .panel-body
          .row
            .col-md-12
              .row
                .col-md-12
                  - @questions.each do |q|
                    .questions_box
                      .question_single{:class => q.question_type === 0 ? 'question_user' : 'question_codhab'}
                        %span
                          %b.question_answer
                            = q.question_type === 0 ? 'Você disse :' : 'A CODHAB respondeu :'
                          %b.question_date
                            Criado em:
                            = q.created_at.strftime('%d/%m/%Y')
                        %p
                          = q.message
