= simple_form_for @session, url: restrict_area_sessions_path do |f|
  .row
    .col-md-6
      = f.input :cpf, label: "CPF", input_html: { class: mobile_device? ? '' : 'cpf'}
    .col-md-6
      = f.input :password, label: "Senha", placeholder: "********"
  .row
    .col-md-6
      = f.submit "Realizar acesso", class: 'btn btn-success', data: { disable_with: t(:disable_with)}
    .col-md-6
      = link_to "Esqueci minha senha", new_remember_password_path, class: 'btn btn-default', data: { disable_with: t(:disable_with)}