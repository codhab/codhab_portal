.row
  .col-md-12
    .panel
      .panel-heading
        %h2
          %b Recuperar senha - Inscrição - 2020
      .panel-body
        = simple_form_for @remember, url: candidate.create_remember_subscribes_path, method: :post do |f|
          
          .row
            .col-md-3
              - if f.object.errors[:base].any?
                .alert.alert-danger
                  Dados não conferem com o informado no ato da inscrição.
          .row
            .col-md-3
              = f.input :cpf, label: "CPF", placeholder: "Informe o CPF da inscrição", input_html: { class: 'cpf'}
          .row
            .col-md-3
              = f.input :born, as: :string, label: "Data de nascimento", placeholder: "Informe da data de nascimento", input_html: { class: 'date' }
          .row
            .col-md-3
              = f.input :name, as: :string, label: "Nome completo", placeholder: "Informe o nome completo"
          .row
            .col-md-3
              = f.input :rg, as: :string, label: "RG", placeholder: "Informe o número do RG"
          .row
            .col-md-3
              = f.submit "Validar meus dados", class: 'btn btn-success btn-block'
          %br/
          .row
            .col-md-3
              = link_to "Retornar para acesso", candidate.new_session_subscribes_path, class: 'btn btn-info btn-block'