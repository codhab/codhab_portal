.row.mini-margin
  .col-md-12
    .panel.panel-default
      .panel-body
        .row
          .col-md-6
            %h3
              %b Listagem de laudos
        %hr/
        .row
          .col-md-12
            Listando #{@apprailsas.total_entries rescue 0}
            %table.table.table-striped.table-bordered.table-celled
              %thead
                %tr
                  %th.collapsing NÂº atendimento
                  %th CPF (Candidato)
                  %th Data (Atendimento)
                  %th
              %tbody
                - @apprailsas.each do |ticket|
                  %tr
                    %td.collapsing= ticket.id
                    %td
                      %b= ticket.candidate_cpf
                      %br/
                      = ticket.candidate_name
                    %td
                      = ticket.candidate_date.strftime("%d/%m/%Y")
                    %td.collapsing
                      = link_to "Visualizar laudos", attendance_appraisal_appraisal_documents_path(ticket), remote: true
              %tfoot
                %tr
                  %th
                    = will_paginate @apprailsas, renderer: BootstrapPagination::Rails