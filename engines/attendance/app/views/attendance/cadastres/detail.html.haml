.row
  .col-md-12
    .panel.panel-default
      .panel-body
        .row
          .col-md-12
            %h4
              %b
                Meu Cadastro
        .row
          .col-md-12
            %table.table.table-striped.table-bordered
              %thead
                %tr
                  %th Nome
                  %th CPF
                  %th RG
              %tbody
                %tr
                  %td= @cadastre.name
                  %td= @cadastre.cpf
                  %td= "#{@cadastre.rg} - #{@cadastre.rg_org}/#{@cadastre.rg_uf}"
              %thead
                %tr
                  %th Data de nascimento
                  %th Sexo
                  %th Local de Nascimento
              %tbody
                %tr
                  %td= @cadastre.born.strftime('%d/%m/%Y') rescue nil
                  %td= @cadastre.gender rescue nil
                  %td= @cadastre.place_birth
              %thead
                %tr
                  %th Chegada no DF
                  %th Estado Civil
                  %th Nome da Mãe
              %tbody
                %tr
                  %td= @cadastre.arrival_df.strftime('%d/%m/%Y') rescue nil
                  %td= @cadastre.civil_state.name rescue nil
                  %td= @cadastre.mother_name rescue nil
              %thead
                %tr
                  %th Condicão Especial
                  %th CID
                  %th Tipo de Condição Especial
              %tbody
                %tr
                  %td= @cadastre.special_condition.name rescue nil
                  %td= @cadastre.cid rescue nil
                  %td= @cadastre.special_condition_type.name rescue nil
              %thead
                %tr
                  %th NIS
                  %th Renda do Titular
                  %th Renda Familiar
              %tbody
                %tr
                  %td= @cadastre.nis rescue nil
                  %td= @cadastre.main_income rescue nil
                  %td= @cadastre.income rescue nil
              %thead
                %tr
                  %th{colspan: 3} Dados de Contato
              %thead
                %tr
                  %th Cidade
                  %th Endereço
                  %th Complemento do Endereço
              %tbody
                %tr
                  %td= @cadastre.city.name rescue nil
                  %td= @cadastre.address rescue nil
                  %td= @cadastre.address_complement rescue nil
              %thead
                %tr
                  %th{colspan: 3} Email
              %tbody
                %tr
                  %td{colspan: 3}= @cadastre.email rescue nil
              %thead
                %tr
                  %th Telefone
                  %th Telefone Opcional
                  %th Celular
              %tbody
                %tr
                  %td= @cadastre.telephone rescue nil
                  %td= @cadastre.telephone_optional rescue nil
                  %td= @cadastre.celphone rescue nil
