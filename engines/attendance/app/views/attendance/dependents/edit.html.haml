.row
  .col-md-12
    .panel.panel-default
      .panel-body
        .h4
          %b Editar dependente
        .sub-title Formulário de edição de dependente
        .row
          .col-md-12
            - if @ticket.closed?(@action)
              .text-center
                %p
                  %h2 Dados #{@action.situation.name.pluralize}
                %p
                  %i.icon.checkmark.huge.green
        .mini-margin
        .row
          .col-md-12
            = render 'edit_form'
