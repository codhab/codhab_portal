.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        = render 'layouts/cpl_concurrence/header'
      .panel-body
        .row
          .col-md-12
            = render 'layouts/cpl_concurrence/tabs'
        .row
          .col-md-12
        .row
          .col-md-12
            .text-center
              = image_tag 'http://www.codhab.df.gov.br/portal/images/codhab.png', width: '300'
            = @notice.header_minute.html_safe

        .row
          .col-md-12
            %table.table.table-striped.table-celled
              %thead
                %tr
                  %th.th-gray.text-center{colspan: 8} PROPOSTAS
                %tr
                  %th Nº
                  %th CNPJ
                  %th Fornecedor
                  %th Porte ME/EPP
                  %th Declaração ME/EPP
                  %th Envelope 1
                  %th Envelope 2
                  %th Data/Hora
              %tbody
                - 10.times.each_with_index do |i|
                  %tr
                    %td= i + 1
                    %td 00.000.000/0000-00
                    %td Empresa exemplo #{i + 1}
                    %td Sim
                    %td Sim
                    %td= link_to "Visualizar", "#"
                    %td= link_to "Visualizar", "#"
                    %td 12/06/2018 05:35

        .row
          .col-md-12
            %table.table.table-striped.table-celled
              %thead
                %tr
                  %th.th-gray.text-center{colspan: 6} CLASSIFICAÇÃO
                %tr
                  %th #
                  %th CNPJ
                  %th Fornecedor
                  %th Porte ME/EPP
                  %th Valor
                  %th Data/Hora
              %tbody
                - 10.times.each_with_index do |i|
                  %tr
                    %td
                      %i Ainda não classificado
                    %td 00.000.000/0000-00
                    %td Empresa exemplo #{i + 1}
                    %td Sim
                    %td
                      %i Ainda não registrado
                    %td 12/06/2018 05:35

        .row
          .col-md-12
            %table.table.table-striped.table-celled
              %thead
                %tr
                  %th.th-gray.text-center{colspan: 6} EVENTOS
                %tr
                  %th.collapsing Data/Hora
                  %th Autor
                  %th Descrição
              %tbody
                %tr
                  %td.collapsing 12/06/2019 - 08:02        
                  %td.collapsing Nome usuário        
                  %td Abertura de sessão realizada através de senha pessoal     
                %tr
                  %td.collapsing 12/06/2019 - 08:03       
                  %td.collapsing Nome usuário        
                  %td Visualização de envelope 1 da participação vínculada ao CPNJ 00.000.000/0000-00     
                %tr
                  %td.collapsing 12/06/2019 - 08:04        
                  %td.collapsing Nome usuário        
                  %td Visualização de envelope 2 da participação vínculada ao CPNJ 00.000.000/0000-00     
                %tr
                  %td.collapsing 12/06/2019 - 08:05        
                  %td.collapsing Nome usuário        
                  %td Inserção de valor de proposta enviado pelo CNPJ 00.000.000/0000-00  
        .row
          .col-md-12
            %table.table.table-striped.table-celled
              %thead
                %tr
                  %th.th-gray.text-center{colspan: 6} CHAT
                %tr
                  %th.collapsing Data/Hora
                  %th Autor
                  %th Descrição
              %tbody
                - 2.times.each_with_index do |i|
                  %tr
                    %td.collapsing 12/06/2019 08:0#{i}                              
                    %td.collapsing Usuário extranet                              
