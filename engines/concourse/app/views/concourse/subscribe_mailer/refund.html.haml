!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %title Simples-Minimalistic Responsive Template
    :css
      /* Client-specific Styles */
      #outlook a {padding:0;} /* Force Outlook to provide a "view in browser" menu link. */
      body{width:100% !important; -webkit-text-size-adjust:100%; -ms-text-size-adjust:100%; margin:0; padding:0; text-align:justify !important;}
      /* Prevent Webkit and Windows Mobile platforms from changing default font sizes, while not breaking desktop design. */
      .ExternalClass {width:100%;} /* Force Hotmail to display emails at full width */
      .ExternalClass, .ExternalClass p, .ExternalClass span, .ExternalClass font, .ExternalClass td, .ExternalClass div {line-height: 100%;} /* Force Hotmail to display normal line spacing.*/
      #backgroundTable {margin:0; padding:0; width:100% !important; line-height: 100% !important;}
      img {outline:none; text-decoration:none;border:none; -ms-interpolation-mode: bicubic;}
      a img {border:none;}
      .image_fix {display:block;}
      p {margin: 0px 0px !important;}
      table td {border-collapse: collapse;}
      table { border-collapse:collapse; mso-table-lspace:0pt; mso-table-rspace:0pt; }
      a {color: #0a8cce;text-decoration: none;text-decoration:none!important;}
      /*STYLES*/
      table[class=full] { width: 100%; clear: both; }
      /*IPAD STYLES*/
      @media only screen and (max-width: 640px) {
      a[href^="tel"], a[href^="sms"] {
      text-decoration: none;
      color: #0a8cce; /* or whatever your want */
      pointer-events: none;
      cursor: default;
      }
      .mobile_link a[href^="tel"], .mobile_link a[href^="sms"] {
      text-decoration: default;
      color: #0a8cce !important;
      pointer-events: auto;
      cursor: default;
      }
      table[class=devicewidth] {width: 440px!important;text-align:center!important;}
      table[class=devicewidthinner] {width: 420px!important;text-align:center!important;}
      img[class=banner] {width: 440px!important;height:220px!important;}
      img[class=colimg2] {width: 440px!important;height:220px!important;}


      }
      /*IPHONE STYLES*/
      @media only screen and (max-width: 480px) {
      a[href^="tel"], a[href^="sms"] {
      text-decoration: none;
      color: #0a8cce; /* or whatever your want */
      pointer-events: none;
      cursor: default;
      }
      .mobile_link a[href^="tel"], .mobile_link a[href^="sms"] {
      text-decoration: default;
      color: #0a8cce !important;
      pointer-events: auto;
      cursor: default;
      }
      table[class=devicewidth] {width: 280px!important;text-align:center!important;}
      table[class=devicewidthinner] {width: 260px!important;text-align:center!important;}
      img[class=banner] {width: 280px!important;height:140px!important;}
      img[class=colimg2] {width: 280px!important;height:140px!important;}
      td[class=mobile-hide]{display:none!important;}
      td[class="padding-bottom25"]{padding-bottom:25px!important;}

      }
  %body

    %table#backgroundTable{:bgcolor => "#ffffff", :border => "0", :cellpadding => "0", :cellspacing => "0", "st-sortable" => "header", :width => "100%"}
      %tbody
        %tr
          %td
            %table.devicewidth{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
              %tbody
                %tr
                  %td{:width => "100%"}
                    %table.devicewidth{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
                      %tbody
                        / Spacing
                        %tr
                          %td{:height => "20", :style => "font-size:1px; line-height:1px; mso-line-height-rule: exactly;"}  
                        / Spacing
                        %tr
                          %td
                            / logo
                            %table.devicewidth{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "140"}
                              %tbody
                                %tr
                                  %td{:align => "center", :height => "70", :width => "169"}
                                    .imgpop
                                      %a{:href => "#", :target => "_blank"}
                                        %img{:alt => "", :border => "0", :height => "70", :src => "http://www.codhab.df.gov.br/images/codhab.png", :style => "display:block; border:none; outline:none; text-decoration:none;", :width => "169"}/
                            / end of logo
                        / Spacing
                        %tr
                          %td{:height => "20", :style => "font-size:1px; line-height:1px; mso-line-height-rule: exactly;"}  
                        / Spacing
    / End of Header
    / Start of main-banner
    %table#backgroundTable{:bgcolor => "#ffffff", :border => "0", :cellpadding => "0", :cellspacing => "0", "st-sortable" => "banner", :width => "100%"}
      %tbody
        %tr
          %td
            %table.devicewidth{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
              %tbody
                %tr
                  %td{:width => "100%"}
                    %table.devicewidth{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
                      %tbody
                        %tr
                          / start of image
                          %td{:align => "center", "st-image" => "banner-image"}
                            .imgpop
                              %a{:href => "#", :target => "_blank"}

    / End of main-banner
    / Start of seperator
    %table#backgroundTable{:bgcolor => "#ffffff", :border => "0", :cellpadding => "0", :cellspacing => "0", "st-sortable" => "seperator", :width => "100%"}
      %tbody
        %tr
          %td
            %table.devicewidth{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
              %tbody
                %tr
                  %td{:align => "center", :height => "20", :style => "font-size:1px; line-height:1px;"}  
    / End of seperator
    / Start Full Text
    %table#backgroundTable{:bgcolor => "#ffffff", :border => "0", :cellpadding => "0", :cellspacing => "0", "st-sortable" => "full-text", :width => "100%"}
      %tbody
        %tr
          %td
            %table.devicewidth{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
              %tbody
                %tr
                  %td{:width => "100%"}
                    %table.devicewidth{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
                      %tbody
                        / Spacing
                        %tr
                          %td{:height => "20", :style => "font-size:1px; line-height:1px; mso-line-height-rule: exactly;"}  
                        / Spacing
                        %tr
                          %td
                            %table.devicewidthinner{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "560"}
                              %tbody
                                / Title
                                %tr
                                  %td{"st-title" => "fulltext-heading", :style => "font-family: Helvetica, arial, sans-serif; font-size: 30px; color: #333333; text-align:left; line-height: 30px;"}
                                    %b  SOLICITAÇÃO DE REEMBOLSO


                                / End of Title
                                / spacing
                                %tr
                                  %td{:height => "20", :style => "font-size:1px; line-height:1px; mso-line-height-rule: exactly;", :width => "100%"}  
                                / End of spacing
                                / content
                                %tr
                                  %td{"st-content" => "fulltext-content", :style => "font-family: Helvetica, arial, sans-serif; font-size: 16px; color: #666666; text-align:left; line-height: 30px;"}
                                    %p Prezado candidato,
                                    %br
                                    %p
                                      1. Confirmamos o recebimento dos seus dados bancários, de posse dos quais a CODHAB/DF terá condições de efetuar o reembolso do valor despendido com a sua taxa de inscrição: R$ 300,00 (trezentos reais). A equipe técnica da Companhia responsável pelo procedimento trabalha incansavelmente para que o ressarcimento ocorra da forma mais célere possível.
                                    %br
                                    %p
                                      2. Contudo, informamos que a conclusão do ato administrativo, por questões técnicas e legais, pode levar por volta de 10 (dez) dias úteis. Para garantir ao inscrito o conhecimento do momento em que o lançamento do crédito for realizado, uma mensagem automática será enviada ao seu e-mail - cadastrado no momento da inscrição do certame.
                                    %br
                                    %p
                                      3. Agradecemos, uma vez mais, a compreensão e nos colocamos à disposição.
                                    %br
                                    %p
                                      Abaixo, um espelho dos seus dados preenchidos no formulário de reembolso:
                                    %br
                                    %h3
                                      1. Identificação do requerente:
                                    %table.devicewidthinner{:align => "center", :border => "1", :cellpadding => "0", :cellspacing => "0", :width => "560"}
                                      %thead
                                        %tr
                                          %th Nome
                                          %th CPF
                                          %th Data de inscrição
                                          %th Taxa de inscrição
                                      %tbody
                                        %tr
                                          %td= @candidate.name
                                          %td= @candidate.cpf
                                          %td= @candidate.created_at.strftime('%d/%m/%Y')
                                          %td R$ 300,00
                                    %h3
                                      2. Dados bancários informados:
                                    %table.devicewidthinner{:align => "center", :border => "1", :cellpadding => "0", :cellspacing => "0", :width => "560"}
                                      %thead
                                        %tr
                                          %th Banco
                                          %th Tipo de conta
                                          %th Agência
                                          %th Conta
                                          %th Operação
                                      %tbody
                                        %tr
                                          %td= @refund.bank_name
                                          %td= @refund.account_type_id
                                          %td= @refund.agency
                                          %td= @refund.account
                                          %td= @refund.operation
                                    %h3
                                      3. Localidade da agência:
                                    %table.devicewidthinner{:align => "center", :border => "1", :cellpadding => "0", :cellspacing => "0", :width => "560"}
                                      %thead
                                        %tr
                                          %th Estado da agência
                                          %th Cidade da agência
                                          %th Endereço da agência
                                      %tbody
                                        %tr
                                          %td= @refund.state.name rescue "Não informado"
                                          %td= @refund.city.name  rescue "Não informado"
                                          %td= @refund.address
                                    %br
                                    %br
                                    %p
                                      Atenciosamente,
                                      %br
                                      Equipe Técnica da CODHAB/DF.





                        %tr
                          %td{:height => "20", :style => "font-size:1px; line-height:1px; mso-line-height-rule: exactly;"}  
                        / Spacing
    / end of full text
    / Start of seperator
    %table#backgroundTable{:bgcolor => "#ffffff", :border => "0", :cellpadding => "0", :cellspacing => "0", "st-sortable" => "seperator", :width => "100%"}
      %tbody
        %tr
          %td
            %table.devicewidth{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
              %tbody
                %tr
                  %td{:align => "center", :height => "30", :style => "font-size:1px; line-height:1px;"}  
                %tr
                  %td{:align => "center", :bgcolor => "#d1d1d1", :height => "1", :style => "font-size:1px; line-height:1px;", :width => "550"}  
                %tr
                  %td{:align => "center", :height => "30", :style => "font-size:1px; line-height:1px;"}  
    / End of seperator
    / Start of Postfooter
    %table#backgroundTable{:bgcolor => "#ffffff", :border => "0", :cellpadding => "0", :cellspacing => "0", "st-sortable" => "postfooter", :width => "100%"}
      %tbody
        %tr
          %td
            %table.devicewidth{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
              %tbody
                %tr
                  %td{:width => "100%"}
                    %table.devicewidth{:align => "center", :border => "0", :cellpadding => "0", :cellspacing => "0", :width => "600"}
                      %tbody
                        %tr
                          %td{:align => "center", "st-content" => "postfooter", :style => "font-family: Helvetica, arial, sans-serif; font-size: 14px;color: #666666", :valign => "middle"}
                            %a{:href => "http://www.codhab.df.gov.br", :style => "text-decoration: none; color: #0a8cce"} Portal Codhab
                            |
                            %a{:href => "http://www.codhab.df.gov.br/concursos", :style => "text-decoration: none; color: #0a8cce"} Concursos
                        / Spacing
                        %tr
                          %td{:height => "20", :width => "100%"}
                        / Spacing
    / End of postfooter
