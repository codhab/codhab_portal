.row.mini-margin
  .col-md-12
    .panel.panel-default
      .panel-body
        .row
          .col-md-6.col-md-offset-3
            %h1{:style => "text-align: center !important"}
              %b Certidão Positiva
              %br/
              %small
                Emitir de Certidão Positiva
        .row
          .col-md-6.col-md-offset-3
            = simple_form_for @document do |f|
              .row
                .col-md-4
                  = f.label "CPF"
                  = f.input :cpf, label: false, input_html: { class: 'cpf'}
              %hr
              .row
                .col-md-12
                  = f.button :submit, "Pesquisar", class: 'btn btn-success', data: {  disable_with: "Aguarde..."}
