:css
  .mybox{
      background-color: #fbfbfb;
      border: 1px solid #f5f5f5;
      margin-top: 30px;
      padding: 40px;
      -webkit-border-radius: 3px;
      -moz-border-radius: 3px;
      border-radius: 3px;
      min-height: 230px
  }
  .link_img_mob a img{
    width:100%;
  }
  @media (min-width: 1281px) {
    .link_img_mob a img{
      width:10%;
    }
  }


  @media (min-width: 1025px) and (max-width: 1280px) {
    .link_img_mob a img{
      width:10%;
    }
  }
