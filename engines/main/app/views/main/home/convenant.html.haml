.container{:style => "background: #ffffff"}
  .row
    .col-md-12
      .slider_tech.technical_slider
        .bxslide_action{:style => "margin-top:30px;height:400px;"}
          = image_tag '/portal/20.png'

  -if @events.title.present?
    .row
      .column
        .col-md-12
          %table.ui.celled.table.yellow
            %tbody
              - @events.order(:title).each do |event|
                %tr
                  .row
                    .col-md-12
                      .col-md-4.tech_bloco_33{style:'height: 386px; float: right; width: 643px'}
                        = image_tag event.file_path
                      .col-md-8.tech_bloco_32
                        %div
                          %h3{style:'float: right;'}
                            = event.title
                    %p{style:'float: right;'}
                      %br
                      = event.content
