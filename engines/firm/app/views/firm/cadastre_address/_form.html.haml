.row
 .col-md-6
  .row
   .col-md-12
    Pesquisar CPF
  .row
   .col-md-12
    = simple_form_for new_enterprise_unit_cadastre_address_path, :method => 'get' do |f|
     .row
      .col-md-5
       = f.label "CPF"
       = f.input :by_cpf, label: false, input_html: { name: 'by_cpf', value: params[:by_cpf]}
     .row
      .col-md-12
       = f.submit 'Pesquisar', class:  'btn btn-primary', input_html: { name: nil}

 .col-md-6
  .row
   .col-md-12
    -if @candidate_firm.present?
     Candidato:
     =@candidate.name
     = render 'book'
