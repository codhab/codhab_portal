- if mobile_device?
  .row
    .col-md-10.input-big
      = render 'form'
- else
  .row.mini-margin
    .col-md-12.box
      .panel.panel-default
        .panel-heading
          .row
            .col-md-12
              %h1
                %b.orange Regularização
                %br/
                %small Agendamento de regularização
        %hr/
        .panel-body
          .row
            .col-md-12.input-big
              = render 'form'

:css
  .container.portal-container.box, body{
    background-color:#fff!important;
  }
  .navbar.navbar-default.navbar-codhab, footer{
    display:none;
  }
