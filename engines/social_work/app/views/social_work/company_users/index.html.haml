.row
  .col-md-12
    .panel.panel-default
      .panel-body
        .row
          .col-md-12
            %h4
              %b Listagem de Usuários
            %hr
            = link_to 'Criar Usuário', new_company_user_path, remote: true, class: 'btn btn-info'
        .row
          .col-md-12
            %table.table.table-striped.table-bordered
              %thead
                %tr
                  %th Nº
                  %th Nome
                  %th Login
                  %th Ações
              %tbody.index_user
                = render 'index'
