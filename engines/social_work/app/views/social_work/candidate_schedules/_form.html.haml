.row
  .col-md-8
    = f.label :name
    = f.input :name, label: false, input_html: { placeholder: 'Digite o nome' }
  .col-md-4
    = f.label :cpf
    = f.input :cpf, label: false, input_html: { class: 'cpf' }
.row
  .col-md-8
    = f.label :email
    = f.input :email, label: false, input_html: { placeholder: 'Digite o email' }
  .col-md-4
    = f.label :schedule_status
    = f.association :schedule_status, label: false, prompt: 'Selecione...'
.row
  .col-md-4
    = f.input :priority, as: :select, label: 'Prioridade', collection: Core::SocialWork::CandidateSchedule.priorities.keys, prompt: 'Selecione'
  .col-md-4
    = f.label :cep
    = f.input :cep, label: false, input_html: { placeholder: 'Digite o CEP' }
  .col-md-4
    = f.association :city, collection: Address::City.federal_district, prompt: 'Selecione...'
.row
  .col-md-8
    = f.label :address
    = f.input :address, label: false, input_html: { placeholder: 'Digite o endereço' }
  .col-md-4
    = f.label :complement_address
    = f.input :complement_address, label: false, input_html: { placeholder: 'Digite o complemento do endereço' }
.row
  .col-md-4
    = f.label :telphone
    = f.input :telphone, label: false, input_html: { placeholder: '(00) 00000-0000' }
  .col-md-4
    = f.label :hour
    = f.input :hour, as: :string, label: false, input_html:  { class: 'hour' }
  .col-md-4
    = f.label :date
    = f.input :date, as: 'string', input_html: { class: 'date', placeholder: '00/00/0000', value: (@candidate_schedule.date) ? localize(f.object.date) : nil}
.row
  .col-md-12
    = f.label :observation
    = f.input :observation, label: false, input_html: { rows: 2, cols: 80}
%hr
.row
  .col-md-12
    = f.button :submit, 'Salvar', class: 'btn btn-success', data: {disable_with: t(:disable_with)}
    = link_to 'Voltar', candidate_schedules_path, class: 'btn btn-default'
