= simple_form_for @category, remote: true do |f|
  .field
    = f.input :name, placeholder: "Digite o nome do tipo de cobran√ßa"
  .fields
    .three.wide.field
      = f.input :default_value, as: :string, input_html: {class: 'coin', value: f.object.default_value? ? number_with_precision(f.object.default_value, precision: 2) : 0}
    .three.wide.field
      = f.input :status, as: :select, include_blank: false
  .field
    = f.input :description
  .field
    = f.button :submit, class: 'ui button green'
