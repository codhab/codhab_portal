.row
  .col-md-12
    %h5
      %b= @competition.title
    = link_to "Retornar para editais", cpl_competition.competitions_path, data: { disable_with: 'aguarde...'}
%hr/
.row
  .col-md-12
    %table.table.table-celled.table-bordered
      %thead
        %tr 
          %th Detalhamento do Ata
      %tbody
        %tr
          %td= @competition.content.html_safe

.row
  .col-md-12
    .card
      .card-body
        %h5.text-center
          %b PARTICIPANTES
        %br/
        %table.table.table-celled.table-bordered
          %thead
            %tr 
              %th.collapsing POSIÇÃO
              %th CNPJ
              %th REGIME
              %th CRED
              %th.collapsing ENV 1
              %th.collapsing ENV 2
              %th.collapsing VALOR
          %tbody
            - @competition.competition_users.order(value: :asc).each_with_index do |comp_user, index|
              %tr
                %td= index + 1
                %td= comp_user.user.cnpj
                %td.collapsing= comp_user.competition_user_credentials.where(deleted: false).last.regime_type
                %td.collapsing
                  = link_to "Abrir", cpl_competition.competition_user_credential_path(@competition, comp_user, comp_user), remote: true
                %td.collapsing
                  = link_to "Abrir", "#"
                %td.collapsing
                  = link_to "Abrir", "#"
                %td.collapsing
                  - if current_user.administrator?
                    = link_to "Adicionar valor"
                  - else
                    %i Sem valor definido


