.container
  -# .col-md-12
  -#   = link_to image_tag("http://www.codhab.df.gov.br/uploads/archive/files/201df0bbe0caf392bfe455d6067e2deb.png",:style => "width:100%;"), "http://www.codhab.df.gov.br/atendimento/sessions/new",:target => "_blank"
  .col-md-12{style: 'width:1200px!important;'}
    %h2.title_notice Últimas Notícias
    .bxslide
      - @posts.each do |p|
        .col-sm-6.col-md-4
          .thumbnail.thumbnoticia
            .thumbnail-img
              - if p.thumbnail?
                = image_tag p.thumbnail , :alt => "#{(p.photo_description.present?) ? p.photo_description : 'Foto sem descrição'}"
              - else
                = image_tag '/portal/images/codhab.png'
            .caption.caption_notice
              %a.link_caption
                %b= link_to "#{(p.post_category.present?) ? p.post_category.title : ''}", post_path(p), class: 'council'
              .link_caption_date
                = p.date.strftime('%d/%m/%Y')
            .link_caption_text
              %h3
                %b= link_to p.title, post_path(p)
